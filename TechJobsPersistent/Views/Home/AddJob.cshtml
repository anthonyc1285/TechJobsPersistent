@using TechJobsPersistent.ViewModels
@model AddJobViewModel

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label asp-for="Name">Name: </label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">


        <label asp-for="EmployerId">Employer: </label>
        <br />
        <div class="input-group-prepend">

            <select asp-for="EmployerId" class="input-group-text">

                @foreach (Employer e in Model.SelectListItem)
                {

                    <option class="dropdown-item" value="@e.Id">@e.Name</option>
}

            </select>
        </div>
        <br />
        <a asp-controller="Employer" asp-action="Add">Add New Employer</a>


    </div>

    <div class="form-group">
        <label asp-for="Skills">Skills:</label>
        <br /><div class="skills">
            @foreach (Skill s in Model.PossibleSkills)
            {
                <div class="input-group mb-3" style="break-inside: avoid-column;">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <input type="checkbox" name="selectedSkills" value="@s.Id" />

                        </div>
                    </div>  <label class="form-control">@s.Name</label>
                </div>}
        </div>
        <a asp-controller="Skill" asp-action="Add">Add New Skill</a>

    </div>

    <input type="submit" value="Add Job" class="btn btn-primary" />
</form>
